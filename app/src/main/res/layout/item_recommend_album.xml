<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView
                android:id="@+id/item_recommend_album_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_action_search"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:text="小编推荐"
                />

        <TextView
                android:id="@+id/item_recommend_album_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="更多》"
                />
    </RelativeLayout>

    <!-- 图片区 -->

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <LinearLayout
                android:id="@+id/item_recommend_album_block0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="2dp"
                >
            <!-- 下面的控件都是通过 getChildAt() 来获取，指定ID
            就太多了-->
            <ImageButton
                    style="@style/DiscoverRecommend.AlbumImage"
                    android:src="@mipmap/ic_launcher"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:ellipsize="end"
                    android:text="193949494959493939"
                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/item_recommend_album_block1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="2dp"
                >
            <!-- 下面的控件都是通过 getChildAt() 来获取，指定ID
            就太多了-->
            <ImageButton
                    style="@style/DiscoverRecommend.AlbumImage"
                    android:src="@mipmap/ic_launcher"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:ellipsize="end"
                    android:text="193949494959493939"
                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/item_recommend_album_block2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="2dp"
                >
            <!-- 下面的控件都是通过 getChildAt() 来获取，指定ID
            就太多了-->
            <ImageButton
                    style="@style/DiscoverRecommend.AlbumImage"
                    android:src="@mipmap/ic_launcher"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:ellipsize="end"
                    android:text="193949494959493939"
                    />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>